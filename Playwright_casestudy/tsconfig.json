{
    "compilerOptions": {
      "target": "ES2020",
      "types": ["node", "@types/cucumber"],
      "module": "commonjs",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "moduleResolution": "node",
      "resolveJsonModule": true
    },
    "include": ["./src/**/*.ts", "./test/**/*.ts"]
  }
  